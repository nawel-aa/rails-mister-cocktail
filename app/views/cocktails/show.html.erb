<div class="container">
  <h1><%= @cocktail.name %></h1>
  <ul>
    <% @doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %> - <%= link_to  "Delete", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %></li>
    <% end %>
  </ul>
  <div class="row">
    <div class="col col-12 col-lg-6">
      <%= render '/doses/form_dose' %>
    </div>
  </div>
</div>
