<div class="container mt-3 mb-5 position-relative">
  <%= link_to  "Back to homepage", root_path, class: 'text-light' %>
  <h1 class="mt-4"><%= @cocktail.name %></h1>
  <div class="row">
    <div class="col col-12 col-md-6 col-lg-8">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Recipe</h2>
          <div class="float-left pr-3">
            <%= cl_image_tag @cocktail.photo.key, height: 300, width: 300, crop: :fill if @cocktail.photo.attached? %>
          </div>
          <ul class="list-unstyled">
            <% @doses.each do |dose| %>
            <li class="pl-4 pb-2"><strong><%= dose.ingredient.name %></strong> - <%= dose.description %> <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure this ingredient is not necessary?' } do %>
            <i title="Delete ingredient" class="far fa-trash-alt d-inline-block ml-2"></i>
            <% end %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="col col-12 col-md-6 col-lg-4">
      <div class="card">
        <div class="card-body">
          <%= render '/doses/form_dose' %>
        </div>
      </div>
    </div>
  </div>

</div>
