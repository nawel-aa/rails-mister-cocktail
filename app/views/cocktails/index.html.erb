<div class="container-fluid">
  <div class="banner row align-items-center" style="background-image: url(/assets/banner.jpg);">
    <div class="container">
      <h1>Cocktails</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col col-12 col-md-6 col-lg-3">
      <%= link_to cocktail_path(cocktail) do %>
        <%= content_tag :div, cocktail.name, :class => "card" %>
      <% end %>
    </div>
    <% end %>
  </div>
  
  <div class="row">
    <div class="col col-12 col-lg-6">
      <h2>New cocktail</h2>
      <%= render 'form_cocktail' %>
    </div>
  </div>
</div>