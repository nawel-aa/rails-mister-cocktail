<div class="container">
  <% @cocktails.each do |cocktail| %>
  <ul class="list-unstyled">
    <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
  </ul>
  <% end %>
  
  <div class="row">
    <div class="col-12 col-lg-6">
      <h1>New cocktail</h1>
      <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>