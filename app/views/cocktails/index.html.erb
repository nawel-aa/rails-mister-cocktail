<div class="container-fluid">
  <div class="banner row align-items-center" style="background-image: url(/assets/banner.jpg);">
    <div class="container">
      <h1>Cocktails</h1>
    </div>
  </div>
</div>

<div class="container pt-5 pb-5">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col col-12 col-md-6 col-lg-3">
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill if cocktail.photo.attached? %>)">
            <span class="card-title"><%= cocktail.name %></span>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
  
  <div class="row">
    <div class="col col-12 col-lg-6">
      <h2>New cocktail</h2>
      <%= render 'form_cocktail' %>
    </div>
  </div>
</div>